<VirtualHost *:80>
  ServerName <%= @server_name %>  
<% end %>
  DocumentRoot <%= @docroot %>
  RailsBaseURI /
  RailsMaxPoolSize <%= @max_pool_size %>            
  RailsPoolIdleTime 3600
  RailsEnv 'production'
  <Directory <%= @docroot %>>
    Options FollowSymLinks
    AllowOverride None
    Order allow,deny
    Allow from all
  </Directory>
</VirtualHost>